package com.revature.core.java.assignment;

import java.util.Scanner;
import java.text.DateFormat;
import java.text.SimpleDateFormat;
import java.util.Calendar;
import java.util.Date;

public class SwitchActions 
{
	public void performAction(String action)
	{
		switch (action)
		{
		case "sqrt" :
			System.out.println("Please enter a number: ");
			Scanner input = new Scanner(System.in);
			int number = input.nextInt();
			System.out.println(Math.sqrt(number));
			
		case "date" :
			Calendar calender = Calendar.getInstance();
			Date date = new Date();
			DateFormat dateFormat = new SimpleDateFormat("HH:mm:ss");
			String formattedDate = dateFormat.format(date);
			System.out.println("Todays's Date: " + formattedDate);
			
		case "split" :
			System.out.println("Please enter the string to split: ");
			Scanner scanner = new Scanner(System.in);
			String unsplitString = scanner.nextLine();
			String[] splitString = unsplitString.split(" ");
			for(String string : splitString)
			{
				System.out.println(string);
			}
			
		default :
			System.out.println("Not a valid action.");
		}
	}
}
