package driver;

import java.util.Scanner;

import beans.*;

public class Driver {
	public static Bank bank = new Bank();
	
	public static void main(String[] args) {
		int option;
		int inputInt;
		double inputDouble;
		String inputString;
		Scanner ints = new Scanner(System.in);
		Scanner doubles = new Scanner(System.in);
		Scanner Strings = new Scanner(System.in);
		
		System.out.print("Welcome to the Marx Bank"
						+"To select options, please type the number next to your choice and hit enter"
						+"\n\nWould you like to login or register?"
						+"\n(1) - Login"
						+"\n(2) - Register"
						+"\n> ");
		option = ints.nextInt();
		switch (option) {
		case 1:
			String login;
			String password;
			System.out.print("Username: ");
			login = Strings.nextLine();
			System.out.print("Password: ");
			password = Strings.nextLine();
			bank.login(login, password);
			break;
		case 2:
			System.out.print("What type of account will you be registering for?"
							+"\n(1) - Customer"
							+"\n(2) - Employee"
							+"\n(3) - Administrator"
							+"\n> ");
			option = ints.nextInt();
			switch (option) {
				case 1:
					Customer newCustomer = new Customer();
			}
		}
	}
}
